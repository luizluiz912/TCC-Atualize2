<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.cadastrar_usuarioActivity"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome:"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/nome"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Nome"
            android:background="@drawable/formularios_stilos"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColorHint="#000"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/textSobrenome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sobrenome:"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/sobrenome"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Sobrenome"
            android:background="@drawable/formularios_stilos"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColorHint="#000"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/textCPF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CPF:"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/cpf"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="CPF"
            android:background="@drawable/formularios_stilos"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColorHint="#000"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/textEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Usuário"
            android:background="@drawable/formularios_stilos"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColorHint="#000"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/textSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Senha:"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/senha"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions|textPassword"
            android:hint="Senha"
            android:background="@drawable/formularios_stilos"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColorHint="#000"
            android:selectAllOnFocus="false"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/textfuncao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Função:"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/func"
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:hint="Função"
            android:textColorHint="#000"
            android:background="@drawable/formularios_stilos"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="20dp"
            android:textColor="#000"/>

        <Button
            android:id="@+id/btnEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Salvar alterações"
            android:background="@drawable/botoes_stilos"
            android:textColorHint="#fff"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
    </LinearLayout>



</ScrollView>