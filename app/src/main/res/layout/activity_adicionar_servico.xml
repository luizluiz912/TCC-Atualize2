<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.cadastro_servicoActivity"
    android:orientation="vertical"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:background="@drawable/gradient_background2"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escolha o Serviço:"
            tools:textColor="#fff"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:textSize="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de serviço:"
            android:textColor="#fff"
            android:textSize="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/tiposerv"
            android:layout_width="175dp"
            android:layout_height="35dp"
            android:hint="Tipo do serviço"
            android:background="@drawable/formularios_stilos"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="65dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Serviço:"
            android:textColor="#fff"
            android:textSize="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/servico"
            android:layout_width="175dp"
            android:layout_height="35dp"
            android:hint="Serviço"
            android:background="@drawable/formularios_stilos"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Metros:"
            android:textColor="#fff"
            android:textSize="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/metros"
            android:layout_width="175dp"
            android:layout_height="35dp"
            android:hint="Metros"
            android:background="@drawable/formularios_stilos"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preço total"
            android:textColor="#fff"
            android:textSize="15dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/pretot"
            android:layout_width="225dp"
            android:layout_height="35dp"
            android:hint="Preço total"
            android:background="@drawable/formularios_stilos"
            android:layout_marginLeft="35dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/botoes_stilos"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:hint="Confirmar"
            android:textColorHint="#fff"/>

    </LinearLayout>

</LinearLayout>